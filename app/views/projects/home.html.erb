<div class="row">
  <div class="col-sm-4">
    <h3><%=@project.name%></h3> <h5><%=@project.address.city%>, <%=@project.address.state%>, <%=@project.address.country_name%></h5>
    <div class="photo">
      <%=image_tag("project-img-1.png")%>
    </div>
    <div class='proj-info'>
      <div><b><%=@project.description%></b></div>
      <div><b>Year installed:</b> <%=@project.install_date.to_s%></div>
      <div><b>Company:</b> <%=@project.company.name%></div>
      <div><b>Parts:</b></div>
      <% @project.components.each do |component| %>
        <div><%=component.name %></div>
      <%end%>
      <a href="#">See full maintenance log for <%=@project.name%>.</a>
      <%= button_to("Delete", api_v1_project_path(@project), :confirm => "Are you sure you want to delete this project?", :method => :delete, class: 'btn btn-danger') if current_user && current_user.admin? %>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="map-image columns">
        <div id="map-canvas"></div>
    </div>
  </div>
</div>

