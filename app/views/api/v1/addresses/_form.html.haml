= form_for @address,  url: @address.id ? api_v1_address_path(@address) : api_v1_addresses_path  do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  =render :partial => 'address_fields', locals: {f: f}
  .actions
    = f.submit 'Save'