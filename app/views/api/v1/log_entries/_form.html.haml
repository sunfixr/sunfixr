= form_for @log_entry, url: @log_entry.id ? api_v1_log_entry_path(@log_entry) : api_v1_log_entries_path do |f|
  - if @log_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log_entry.errors.count, "error")} prohibited this log_entry from being saved:"
      %ul
        - @log_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :component_id
    = f.text_field :component_id
  .field
    = f.label :comments
    = f.text_field :comments
  .actions
    = f.submit 'Save'
