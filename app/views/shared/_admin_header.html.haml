        %nav.top-bar{role: 'navigation', 'data-topbar'=>'', 'data-options'=>"is_hover: false"}
          %ul.title-area
            / Title Area
            %li.name
              %h1
                %a{:href => root_path}
                  =image_tag "sunfixr-logo.png"
