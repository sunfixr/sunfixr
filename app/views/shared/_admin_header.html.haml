              %a{:href => "#"}
                %span menu
          %section.top-bar-section
            / Right Nav Section
            %ul.left
              %li.divider
              %li
                =link_to('Projects', project_path)
              %li.has-dropdown
                =link_to('Admin','#')
                %ul.dropdown
                  %li
                    =link_to('Projects', installations_path)
                  %li
                    =link_to('Companies', companies_path)
          / End Top Bar
          / End Navigation
