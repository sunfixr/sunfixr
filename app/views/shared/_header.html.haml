%nav.navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
  .navbar-header
    %button.navbar-toggle.collapsed{:type => 'button', "data-toggle"=>'collapse', "data-target"=>"#navbar", "aria-expanded"=>false, "aria-controls"=>"navbar"}
      %span.sr-only= "Toggle Navigation"
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{:href => root_path}
      =image_tag "sunfixr-logo.png"
  #navbar.collapse.navbar-collapse
    %ul.nav.navbar-nav
      %li
        =link_to('Projects', projects_path)
      %li.dropdown
        =link_to('Admin', '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown', role: 'button',
          'aria-haspopup' => 'true', 'aria-expanded' => "false" ) if can? :manage, Project
        %ul{class: 'dropdown-menu dropdown-inverse'}
          %li
            =link_to 'Projects', api_v1_projects_path
            =link_to 'Companies', api_v1_companies_path
            =link_to 'Raw Data', rails_admin_path
    =render(partial: 'shared/navbar_login')
-if alert
  .alert.alert-danger{role: 'alert'}
    %button{type: "button", class: "close", 'data-dismiss' => "alert"}
      &times;
    = alert
-if notice
  .alert.alert-info{role: 'alert'}
    %button{type: "button", class: "close", 'data-dismiss' => "alert"}
      &times;
    =notice