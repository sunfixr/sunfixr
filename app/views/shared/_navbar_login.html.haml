-if current_user
  %ul.nav.navbar-nav.navbar-right
    %li
      =link_to(current_user.email,edit_user_registration_path)
    -if @project && !@project.users.exists?(current_user.id)
      %li
        =link_to('Join',new_user_registration_path(project_id: @project.id.to_s))
    %li
      =link_to('Sign Out',destroy_user_session_path, method: :delete)
-else
  %ul.nav.navbar-nav.navbar-right
    -if @project
      %li
        =link_to('Sign Up',new_user_registration_path(project_id: @project.id.to_s))
    %li
      =link_to('Sign In',new_user_session_path)